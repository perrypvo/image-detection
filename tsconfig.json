{
    "compilerOptions": {
        "declaration": true,
        "target": "es2017",
        "module": "CommonJS",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src/**/*"]
}